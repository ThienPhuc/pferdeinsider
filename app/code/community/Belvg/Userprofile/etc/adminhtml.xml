	<acl>
		<resources>
			<all>
				<title>Allow Everything</title>
			</all>
			<admin>
				<children>
                    <customer>
                        <children>
                            <userprofile translate="title" module="userprofile">
                                <title>User Profile</title>
                                <sort_order>1000</sort_order>
                                <children>
                                    <userprofile_messages translate="title" module="userprofile">
                                        <title>Messages</title>
                                    </userprofile_messages>
                                    <admin_messages translate="title" module="userprofile">
                                        <title>Admin Messages</title>
                                    </admin_messages>
                                </children>
                            </userprofile>
                        </children>
                    </customer>
					<system>
						<children>
							<config>
								<children>
									<userprofile translate="title">
										<title>User Profile Extended</title>
									</userprofile>
								</children>
							</config>
						</children>
					</system>
				</children>
